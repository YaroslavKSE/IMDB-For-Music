{
  "MongoDb": {
    "ConnectionString": "mongodb://${MONGO_USER}:${MONGO_PASSWORD}@${MONGO_HOST}:${MONGO_PORT}",
    "DatabaseName": "MusicCatalog",
    "AlbumsCollectionName": "Albums",
    "TracksCollectionName": "Tracks",
    "ArtistsCollectionName": "Artists",
    "SpotifyCacheCollectionName": "SpotifyCache"
  },
  "ConnectionStrings": {
    "Redis": "${REDIS_CONNECTION_STRING}"
  },
  "Spotify": {
    "ClientId": "${SPOTIFY_CLIENT_ID}",
    "ClientSecret": "${SPOTIFY_CLIENT_SECRET}",
    "CacheExpirationMinutes": 360,
    "RateLimitPerMinute": 1000
  },
  "Cors": {
    "AllowedOrigins": [
      "${FRONTEND_BASE_URL}"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}